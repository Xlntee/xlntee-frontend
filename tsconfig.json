{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/components/*"],
      "pages/*": ["./src/pages/*"],
      "src/*": ["./src/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "legacy/cypress",
    "legacy/App.test.tsx",
    "legacy/price",
    "src/features/rating",
    "legacy/test",
    "legacy/header",
    "legacy/filter",
    "legacy/pictures-section",
    "legacy/landing"
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "noFallthroughCasesInSwitch": true,
  "types": ["vitest/importMeta", "cypress"]
}
